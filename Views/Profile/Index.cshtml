@model AddProfileImageVM
@{
    ViewData["Title"] = "Index";
}

@*<p>@Model.IdentityUserVM.UserName</p>*@
<a asp-controller="Home" asp-action="Index">Home</a>
<form enctype="multipart/form-data" asp-controller="Profile" asp-action="Register">
    <div class="form-group">
        <div class="col-md-10">
            <p>Upload one or more files using this form:</p>
            <label asp-for="@Model.ProfileImage"></label>
            <input asp-for="@Model.ProfileImage" accept="image/*">
            <img class="rounded" src="@Url.Action("GetImage", "Profile")" style="width: 240px; height: 240px;" alt="Profile picture" />
            <img id="blah" src="#" alt="your image" />
            @*<input type="file" name="ProfileImage" accept="image/*">*@

        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Upload" />
        </div>
    </div>
</form>

@section scripts{
    <script src="~/js/showImageInput.js"></script>
}